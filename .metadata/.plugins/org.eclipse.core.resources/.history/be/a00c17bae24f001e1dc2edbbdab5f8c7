
public class Animal {
	String name;
	float weight;
	String color;
	
	public Animal(String name, float weight, String color, String speakSound){
		this.name = name;
		this.weight = weight;
		this.color = color;
		speaK(speakSound);
	}
	
	public Animal(String name, float weight, String color){
		this.name = name;
		this.weight = weight;
		this.color = color;
	}
	
	public void speaK(String speakSound) {
		System.out.println(speakSound);
	}
	
}
